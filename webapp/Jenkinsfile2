pipeline {
    agent any

    environment {

    DOCKERHUB_CREDENTIALS = credentials('dockerhub')
     registry = "yellaiahdocker/konalmsap"
        registryCredential = 'dockerhub'
        dockerImage = ''
    }

    stages {
        stage('clone the code') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: '*/vm-docker-cicd']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/yellaiahgithub/lms-public-yell.git']]])

            }
        }

        stage('Building the docker image') {
            steps {
                sh 'cd webapp && docker build -t yellaiahdocker/kona-lms .'
            }
        }
        stage('Logging into dockerhub account') {
            steps {
                sh 'echo $DOCKERHUB_CREDENTIALS_PSW | docker login -u $DOCKERHUB_CREDENTIALS_USR --password-stdin'
            }
        }
        stage('pushing the docker image into dockerhub') {
            steps {
                  sh 'docker push yellaiahdocker/kona-lms'
            }
        }
        stage('Remove old docker images') {
             steps {
                 sh 'docker rmi -f yellaiahdocker/kona-lms'
                //sh "docker rmi $registry:$BUILD_NUMBER"
                //sh "docker rmi $registry:latest"
            }
        }
         stage('Running the docker container') {
            steps {
                  sh 'docker container rm --force fe'
                  sh 'docker run -dt -p 8000:80 --name fe yellaiahdocker/kona-lms'
            }
        }
    }
}

